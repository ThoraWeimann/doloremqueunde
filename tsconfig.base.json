{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "target": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@acala-network/api": ["packages/api/src"],
      "@acala-network/api/*": ["packages/api/src/*"],
      "@acala-network/types": ["packages/types/src"],
      "@acala-network/types/*": ["packages/types/src/*"],
      "@acala-network/api-derive": ["packages/api-derive/src"],
      "@acala-network/api-derive/*": ["packages/api-derive/src/*"],
    }
  },
  "exclude": [
    "dist/**/*",
    "**/dist/**/*"
  ]
}
